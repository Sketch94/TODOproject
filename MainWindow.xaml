<Window x:Class="TODOproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOproject"
        mc:Ignorable="d"
        Title="ToDo" Height="417" Width="810">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button x:Name="AddButton" Content="Lägg till uppgift" Width="100" Height="30" Grid.Column="1" Click="AddButton_Click" ></Button>
        <TextBox x:Name="AddAssignment" Width="600" Height="30" Grid.Row="0" Grid.Column="0"></TextBox>
        <ListBox x:Name="AssignmentList" Grid.Row="1" Grid.Column="0"></ListBox>

        <Button x:Name="RemoveButton" Content="Radera uppgift" Width="100" Height="30" Grid.Column="1" Grid.Row="2" Click="RemoveButton_Click" ></Button>
        <!-- <TextBox x:Name="AddAssignment" Width="600" Height="30" Grid.Row="0" Grid.Column="0"></TextBox > -->

    </Grid>
</Window>
